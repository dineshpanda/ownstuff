<!-- Form blog start -->
<%= form_with(model: @blog, local: true) do |f| %>
<!-- Form blog end -->

  <!-- Label and input for content start -->
  <div class="form-group">
    <%= f.label :content %>
    <!-- Input for content start -->
    <%= f.text_area :content, rows: "3", class: "form-control" %>
    <!-- Input for content end -->
  </div>
  <!-- Label and input for content end -->

  <!-- Label and input for image start -->
  <div class="form-group">
    <%= f.label :image %>
    <!-- Input for image start -->
    <%= f.text_field :image, class: "form-control" %>
    <!-- Input for image end -->
  </div>
  <!-- Label and input for image end -->

  <!-- Label and input for user_id start -->
  <!-- Input for user_id start -->
  <%= f.hidden_field :user_id, value: @user.id %>
  <!-- Input for user_id end -->
  <!-- Label and input for user_id end -->

  <%= f.submit "Create blog", class: "btn btn-block btn-outline-secondary" %>
<% end %>
