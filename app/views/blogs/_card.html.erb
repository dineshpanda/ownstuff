<div class="card mb-3">
  <h2 class="card-header h4">
    Blog #<%= blog.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Content</dt>
      <dd><%= blog.content %></dd>

      <dt>Image</dt>
      <dd>
        <%= cl_image_tag @blog.image, class: "img-fluid" %>
      </dd>

      <dt>User</dt>
      <dd><%= blog.user_id %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back blog, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_blog_url(blog), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to blog, method: :delete, data: { confirm: "Do you really want to delete this blog?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(blog.updated_at) %> ago
  </div>
</div>
