<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Blogs

    <a data-toggle="collapse" href="#user_blogs_new_form">
      Add blog
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.blogs.each do |blog| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to blog.user_id, blog_path(blog) %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to blog, method: :delete, data: { confirm: "Do you really want to delete this blog" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_blogs_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
